<h1>To Do List</h1>
<br>
<h4>New To Do</h4>

<%= form_for @todo do |f| %>

  <%= f.label :description %>
  <%= f.text_field :description %>
  <%= f.submit %>

<% end %>

<ol>
  <% @todos.each do |task| %>
    <li>
      <%= task.description %>
      <% unless task == @todos.first %>
        <%= link_to 'up', move_path(task, direction: -1) %>
      <% end %>
      <% unless task == @todos.last %>
        <%= link_to 'down', move_path(task, direction: 1) %>
      <% end %>
    </li>
  <% end %>
</ol>
